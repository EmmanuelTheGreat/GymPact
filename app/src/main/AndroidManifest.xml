<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.emmanuel.gympact">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/gymthusiast_symbol"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="label">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/NoBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/NoBar" />
        <activity
            android:name=".UserAreaActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AboutMe"
            android:label="@string/title_activity_AboutMe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ChestExercise" />
        <activity android:name=".BackExercise" />
        <activity android:name=".LegsExercise"></activity>
    </application>

</manifest>
